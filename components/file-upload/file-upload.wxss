.myFileUploadBox { display:flex; flex-wrap:wrap; }
.myFileUploadBox .myUploadImage { position:relative; width:100px; height:100px; background-color:#f3f3f3; border-radius:6px; margin:5px 10px 5px 0; overflow:hidden; }
.myFileUploadBox .myUploadImage .myViewImage { display:block; width:100%; height:100%; }
.myFileUploadBox .myUploadImage .myUploadCloseBtn { z-index:50; position:absolute; right:0; top:0; display:flex; align-items:center; justify-content:center; width:22px; height:22px; background-color:rgba(0, 0, 0, 0.4); color:#fff; font-size:16px; border-bottom-left-radius:6px; }
.myFileUploadBox .myUploadImage .myUploadStatus { z-index:30; position:absolute; left:0; top:0; width:100%; height:100%; background-color:rgba(0, 0, 0, 0.45); --td-loading-color:#fff; --td-loading-text-color:#fff; }
.myFileUploadBox .myUploadBtn { position:relative; display:flex; align-items:center; justify-content:center; width:100px; height:100px; background-color:#f3f3f3; border-radius:6px; margin:5px 10px 5px 0; overflow:hidden; }
.myFileUploadBox .myUploadBtn.myUploadDisabled { background-color:#e2e2e2; }
.myFileUploadBox .myUploadBtn .myUploadIconAdd { font-size:32px; color:rgba(0, 0, 0, 0.4); }
.myFileUploadBox .myUploadBtn .myUploadBtnTips { position:absolute; left:0; bottom:0; width:100%; font-size:12px; line-height:12px; text-align:center; color:#fff; background-color:rgba(0, 0, 0, 0.45); padding:2px 0 3px; }











