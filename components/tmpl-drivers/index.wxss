.runRouteBox { border:solid 1rpx #f3f3f3; border-radius:8px; padding-bottom:10px; margin:10px; }
.runRouteBox .header { font-size:16px; background-color:#f3f3f3; color:rgba(0, 0, 0, 0.8); font-weight:600; padding:15px; }
.runRouteBox .routeselect { display:flex; justify-content:flex-end; height:44px; margin:10px; }
.runRouteBox .routeitem { border:solid 1rpx #f3f3f3; margin:5px 10px 10px; }
.runRouteBox .routeitem .subheader { display:flex; align-items:center; justify-content:space-between; background-color:#f0f0f0; padding:12px; }
.runRouteBox .routeitem .subheader .subname { flex:1; font-size:16px; color:rgba(0, 0, 0, 0.9); white-space:nowrap; text-overflow:ellipsis; overflow:hidden; margin-right:12px; }
.runRouteBox .routeitem .subheader .t-icon { font-size:20px; color:#ff3b30; }
.runRouteBox .routeAddBtn { display:flex; align-items:center; justify-content:center; color:#1677ff; font-size:18px; font-weight:600; padding:10px 0; }
.runRouteBox .routeAddBtn .t-icon { font-size:22px; }