.runRouteBox { border:solid 1rpx #f3f3f3; border-radius:8px; padding-bottom:10px; margin:10px 0; }
.runRouteBox .header { font-size:16px; background-color:#f3f3f3; color:rgba(0, 0, 0, 0.8); font-weight:600; padding:15px; }
.runRouteBox .routeselect { display:flex; justify-content:flex-end; height:44px; margin:10px; }
.runRouteBox .routeBody { position:relative; min-height:100px; padding:40px 10px 10px; }
.runRouteBox .routeBody .routetips { position:absolute; left:0; top:0; width:100%; line-height:30px; font-size:13px; color:rgba(0, 0, 0, 0.65); background-color:#fffbe6; padding-left:24px; }
.runRouteBox .routeBody .routeitem { border:solid 1rpx #f3f3f3; margin-bottom:10px; }
.runRouteBox .routeBody .routeitem .subheader { display:flex; align-items:center; justify-content:space-between; background-color:#f0f0f0; padding:12px; }
.runRouteBox .routeBody .routeitem .subheader .subname { flex:1; font-size:16px; color:rgba(0, 0, 0, 0.9); white-space:nowrap; text-overflow:ellipsis; overflow:hidden; margin-right:12px; }
.runRouteBox .routeBody .routeitem .subheader .t-icon { font-size:20px; color:#ff3b30; }
.runRouteBox .routeBody .routeitem::last-child { margin-bottom:0; }
.runRouteBox .routeAddBtn { display:flex; align-items:center; justify-content:center; color:#1677ff; font-size:18px; font-weight:600; padding:10px 0; }
.runRouteBox .routeAddBtn .t-icon { font-size:22px; }