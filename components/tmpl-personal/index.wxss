.personalTemplate { width:100%; height:100vh; background:linear-gradient(to bottom, #b4d1fd 0%, #f3f3f3 40%); overflow:hidden; }
.personalTemplate .innerScroll { width:calc(100% + 20px); height:100%; padding-bottom:150px; padding-right:20px; overflow-y:auto; }

.personalInfo { display:flex; padding:80px 20px 20px; }
.personalInfo .personalAvator { width:100px; height:100px; border-radius:8px; background-color:#f3f3f3; overflow:hidden; }
.personalInfo .personalAvator image { display:block; width:100%; height:100%; }
.personalInfo .personalBaseInfo { position:relative; flex:1; padding-left:20px; }
.personalInfo .personalBaseInfo .baseNickname { font-size:17px; font-weight:600; color:rgba(0, 0, 0, 0.85); margin-bottom:4px; }
.personalInfo .personalBaseInfo .baseOther { font-size:14px; color:rgba(0, 0, 0, 0.45); margin-bottom:4px; }

.personalBody { min-height:400px; background-color:#fff; border-radius:10px; margin:0 10px; }

.personalActions { padding-top:30px; margin:0 60px; }
