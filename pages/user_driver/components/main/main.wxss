.statistical-info { display:flex; justify-content:space-around; padding:40px 20px; }
.statistical-info .statitem { width:40%; text-align:center; }
.statistical-info .statitem .statnum { font-size:24px; text-shadow:1px 1px 2px rgba(0, 0, 0, 0.35); }
.statistical-info .statitem .statname { font-size:16px; color:rgba(255, 255, 255, 0.65); margin-top:5px; }
.statistical-info .statitem.item01 .statnum { color:#1677ff; }
.statistical-info .statitem.item02 .statnum { color:#ff4d4f; }

.main-process { background-color:#fff; border-radius:8px; padding:12px 12px 20px; margin:10px 10px 0; }
.main-process .header { display:flex; align-items:center; justify-content:space-between; padding:8px; }
.main-process .header .title { color:rgba(0, 0, 0, 0.75); font-size:17px; font-weight:600; }
.main-process .header .title .number { color:rgba(0, 0, 0, 0.45); font-size:14px; font-weight:400; padding-left:5px; }
.main-process .header .extrabox { display:flex; align-items:center; }
.main-process .header .extrabox .actbtn { display:flex; align-items:center; font-size:16px; color:#1677ff; }
.main-process .header .extrabox .line { width:1px; height:12px; background-color:#8d8c8c; margin:0 10px; }
.main-process .listitem { position:relative; border:solid 1px #ebebeb; background-color:#fff; border-radius:8px; padding:8px 10px; margin-top:8px; margin-bottom:10px; }
.main-process .listitem .status { position:absolute; right:12px; top:12px; }
.main-process .listitem .mainbox .psname { width:80%; font-size:16px; color:rgba(0, 0, 0, 0.85); padding-bottom:1px; white-space:nowrap; text-overflow:ellipsis; overflow:hidden; }
.main-process .listitem .mainbox .pstime { font-size:12px; color:rgba(0, 0, 0, 0.45); margin-top:4px; }
.main-process .listitem .mainbox .psinfo { font-size:14px; color:rgba(0, 0, 0, 0.55); margin-top:4px; }
.main-process .listitem .mainbox .psinfo .special { color:#1677ff; }
.main-process .nodata { height:380px; }

.main-process .listitem .mainbox .fahuoinfo { padding:4px 8px; }
.main-process .listitem .mainbox .shouhuoinfo { background-color:#f9f9f9; padding:8px 12px; margin-top:5px; }
.main-process .listitem .mainbox .shouhuoinfo .shname { font-size:15px; font-weight:600; color:rgba(0, 0, 0, 0.65); }

.main-process .listitem .popover { position:absolute; right:2px; top:2px; text-align:center; background-color:#fff; box-shadow:0 0 10px 0 rgba(0, 0, 0, 0.23); border-radius:5px; padding:8px; overflow:hidden; }
.main-process .listitem .popover .listag { display:flex; align-items:center; justify-content:center; margin-top:6px; }
.main-process .listitem .popover .poptips { font-size:12px; color:rgba(0, 0, 0, 0.45); }

.main-process .actionbox { text-align:right; padding:10px; }
.main-process .actionbox .actips { font-size:13px; color:rgba(0, 0, 0, 0.25); }
.main-process .reportbox { display:flex; justify-content:flex-end; text-align:right; color:#d54941; font-size:15px; font-weight:600; padding:5px 15px 15px; }
.main-process .reportbox text { display:block; }


.dialog-wrapper { background-color:#f5f5f5; border-radius:5px; padding:15px; margin-top:15px; }
.dialog-wrapper .diaitem { font-size:15px; color:rgba(0, 0, 0, 0.65); padding:3px 0; }
.dialog-wrapper .diaitem .diatext { font-size:18px; font-weight:600; color:#ff3b30; }