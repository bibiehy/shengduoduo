.audit-detail-box { display:flex; flex-direction:column; width:100vw; height:100vh; }
.audit-detail-box .mainbox { flex:1; padding:10px 10px 180px; overflow-y:auto; }
.audit-detail-box .mainbox .innerbox { position:relative; background-color:#fff; border-radius:8px; padding:10px 10px 0; overflow:hidden; }
.audit-detail-box .mainbox .innerbox .status { position:absolute; right:10px; top:10px; width:86px; height:86px; }
.audit-detail-box .mainbox .innerbox .status image { display:block; width:100%; height:100%; }

.fixed-bottom-btns { display:flex; align-items:center; justify-content:flex-end; }
.fixed-bottom-btns .daishenhe { flex:1; text-align:center; color:#ED7B2F; font-size:20px; }
.fixed-bottom-btns .fixedbtn { padding:0 30px; margin:0 10px; }