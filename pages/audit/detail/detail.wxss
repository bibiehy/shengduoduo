.audit-detail-box { display:flex; flex-direction:column; width:100vw; height:100vh; overflow:hidden; }
.audit-detail-box .mainbox { flex:1; width:calc(100% + 20px); padding:10px 30px 180px 10px; overflow-y:auto; }
.audit-detail-box .mainbox .innerbox { position:relative; min-height:100%; background-color:#fff; border-radius:8px; padding:10px 10px 0; overflow:hidden; }
.audit-detail-box .mainbox .innerbox .status { position:absolute; right:0; top:0; width:86px; height:86px; }
.audit-detail-box .mainbox .innerbox .status image { display:block; width:100%; height:100%; }

.fixed-bottom-btns { display:flex; align-items:center; justify-content:space-around; }
.fixed-bottom-btns .daishenhe { flex:1; text-align:center; color:#1677ff; font-size:20px; }
.fixed-bottom-btns .fixedbtn { margin:0 20px; }














