.pageuser-scroll .listitem { position:relative; border:solid 1px #ebebeb; background-color:#fff; border-radius:8px; padding:12px 15px; margin-bottom:10px; }
.pageuser-scroll .listitem .psname { width:80%; font-size:16px; color:rgba(0, 0, 0, 0.85); padding-bottom:1px; white-space:nowrap; text-overflow:ellipsis; overflow:hidden; }
.pageuser-scroll .listitem .pstime { font-size:12px; color:rgba(0, 0, 0, 0.45); margin-top:4px; }
.pageuser-scroll .listitem .psinfo { display:flex; align-items:center; font-size:14px; color:rgba(0, 0, 0, 0.55); margin-top:4px; }
.pageuser-scroll .listitem .moneybox { position:absolute; right:15px; bottom:35px; display:flex; flex-direction:column; align-items:flex-end; }
.pageuser-scroll .listitem .moneybox .price { display:flex; align-items:flex-end; color:#ff3b30; font-size:20px; font-weight:600; }
.pageuser-scroll .listitem .moneybox .price .CNY { display:block; font-size:12px; padding-bottom:2px; }
.pageuser-scroll .listitem .moneybox .listag { display:flex; justify-content:center; min-width:70px !important; }


.pageuser-box .nodata { height:500px; }