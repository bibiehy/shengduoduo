.task-box { display:flex; flex-direction:column; width:100vw; height:100vh; overflow:hidden; }
.task-box .pageaddbtn { font-size:18px; }

.task-tabs { background-color:#fff; padding:0 5px; margin-top:-1px; }

.page-scroll { flex:1; padding:10px 10px 150px; overflow-y:auto; }
.page-scroll .listitem { position:relative; border:solid 1px #ebebeb; background-color:#fff; border-radius:8px; padding:12px 15px; margin-bottom:10px; }
.page-scroll .listitem .status { position:absolute; right:12px; top:12px; }
.page-scroll .listitem .mainbox .psname { width:80%; font-size:16px; color:rgba(0, 0, 0, 0.85); padding-bottom:1px; white-space:nowrap; text-overflow:ellipsis; overflow:hidden; }
.page-scroll .listitem .mainbox .pstime { font-size:12px; color:rgba(0, 0, 0, 0.45); margin-top:4px; }
.page-scroll .listitem .mainbox .psinfo { display:flex; align-items:center; font-size:14px; color:rgba(0, 0, 0, 0.55); margin-top:4px; }
.page-scroll .listitem .psbtns { display:flex; align-items:center; padding-top:8px; }
.page-scroll .listitem .psbtns .listag { display:flex; justify-content:center; min-width:70px !important; margin-right:10px; }
.page-scroll .listitem .psbtns .pstips { font-size:14px; color:#ff3b30; }
.page-scroll .listitem .biaoqianhao { position:absolute; right:12px; top:125px; text-align:center; color:#ff3b30; }
.page-scroll .listitem .biaoqianhao .bqhvalue { font-size:18px; font-weight:600; }
.page-scroll .listitem .biaoqianhao .bqhlabel { font-size:12px; padding-top:2px; padding-right:2px; }
.page-scroll .nodata { height:380px; }

.kaban-dropdown-box { --td-dropdown-menu-border-width:0; --td-radio-vertical-padding:10px; height:auto !important; }
/* .kaban-dropdown-label, .kaban-dropdown-icon { color:#1677ff !important; } */
.kaban-dropdown-item { font-weight:400; --td-radio-font-size:16px; }
.kaban-dropdown-tips { font-size:15px; color:#ff8f1f; text-align:center; padding:7px 0; }

.dialog-sending { background-color:#f5f5f5; border-radius:5px; padding:15px; margin-top:15px; }
.dialog-sending .diaitem { font-size:15px; color:rgba(0, 0, 0, 0.65); padding:3px 0; }
.dialog-sending .diaitem .diatext { font-size:18px; font-weight:600; color:#ff3b30; }

.popup-fenjian { padding:8px; --td-cell-vertical-padding:14px; }
.popup-fenjian .paneltitle { display:flex; align-items:center; }
.popup-fenjian .paneltitle .ggename { font-size:16px; padding-right:15px; }
.popup-fenjian .paneltitle .ggenum { color:rgba(0, 0, 0, 0.45); font-size:14px; margin-right:10px; }
.popup-fenjian .paneltitle .ggenum text { color:#16ff; }
.popup-fenjian .paneltitle .ggeedit { color:#16ff; }
.popup-fenjian .steptitle { display:flex; align-items:center; }
.popup-fenjian .steptitle .stepdesc { font-size:14px; color:rgba(0, 0, 0, 0.85); }
.popup-fenjian .steptitle .stepdesc text { color:#16ff; }
.popup-fenjian .steptitle .datetime { color:rgba(0, 0, 0, 0.45); font-size:12px; margin-left:10px; }
.popup-fenjian .steptitle .stepinput { display:flex; align-items:center; }
