
.pageall-box .listitem { position:relative; display:flex; background-color:#fff; border-radius:8px; padding:12px; margin-bottom:10px; }
.pageall-box .listitem .avatar { width:88px; height:88px; border-radius:8px; background-color:#f3f3f3; overflow:hidden; }
.pageall-box .listitem .avatar image { display:block; width:100%; height:100%; }
.pageall-box .listitem .mainbox { flex:1; margin-left:15px; }
.pageall-box .listitem .mainbox .username { width:100%; font-size:17px; color:rgba(0, 0, 0, 0.85); padding-bottom:2px; }
.pageall-box .listitem .mainbox .username .txtphone { font-size:15px; color:rgba(0, 0, 0, 0.35); }
.pageall-box .listitem .mainbox .statinfo { flex:1; display:flex; align-items:center; font-size:15px; color:rgba(0, 0, 0, 0.65); }
.pageall-box .listitem .mainbox .statinfo .txtcount { font-size:18px; color:#ff3b30; }
.pageall-box .listitem .mainbox .wenxintips { color:rgba(0, 0, 0, 0.35); font-size:12px; padding:2px 2px 0; }
.pageall-box .nodata { height:500px; }


