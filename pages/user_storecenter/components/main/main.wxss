.mainbox-wrapper { display:flex; flex-direction:column; width:100vw; height:100vh; overflow:hidden; }
.mainbox-wrapper .innerscroll { flex:1; width:calc(100% + 20px); height:100%; padding-bottom:150px; padding-right:20px; overflow-y:auto; }


.statistical-info { display:flex; justify-content:space-between; padding:40px 20px; }
.statistical-info .statitem { display:flex; align-items:center; justify-content:center; width:30%; }
.statistical-info .statitem .statnum { font-size:24px; font-weight:600; text-shadow:1px 1px 2px rgba(0, 0, 0, 0.35); }
.statistical-info .statitem .statname { font-size:14px; color:rgba(0, 0, 0, 0.65); }
.statistical-info .statitem .statnum.color01 { color:#ff3b30; }
.statistical-info .statitem .statnum.color02 { color:#1677ff; }
.statistical-info .statitem .statnum.color03 { color:rgba(0, 0, 0, 0.85); }


.main-process { background-color:#fff; border-radius:8px; padding:12px; margin:10px 10px 0; }
.main-process .header { display:flex; align-items:center; justify-content:space-between; padding:0 5px; }
.main-process .header .title { color:rgba(0, 0, 0, 0.75); font-size:17px; font-weight:600; }
.main-process .header .title .number { color:rgba(0, 0, 0, 0.45); font-size:14px; font-weight:400; padding-left:5px; }
.main-process .header .extrabox { display:flex; align-items:center; }
.main-process .header .extrabox .actbtn { display:flex; align-items:center; font-size:16px; color:#1677ff; }
.main-process .header .extrabox .line { width:1px; height:12px; background-color:#ebebeb; margin:0 5px; }


.main-process .listitem { position:relative; border:solid 1px #ebebeb; background-color:#fff; border-radius:8px; padding:10px 12px; margin-top:8px; margin-bottom:10px; }
.main-process .listitem .status { position:absolute; right:12px; top:12px; }
.main-process .listitem .mainbox .psname { width:80%; font-size:16px; color:rgba(0, 0, 0, 0.85); white-space:nowrap; text-overflow:ellipsis; overflow:hidden; }
.main-process .listitem .mainbox .pstime { font-size:12px; color:rgba(0, 0, 0, 0.45); margin-top:4px; }
.main-process .listitem .mainbox .psinfo { font-size:14px; color:rgba(0, 0, 0, 0.55); margin-top:4px; }
.main-process .listitem .psbtns { display:flex; align-items:center; padding-top:8px; }
.main-process .listitem .psbtns .listag { display:flex; justify-content:center; min-width:70px !important; }
.main-process .listitem .biaoqianhao { position:absolute; right:12px; bottom:15px; text-align:center; color:#ff3b30; }
.main-process .listitem .biaoqianhao .bqhvalue { font-size:20px; font-weight:600; }
.main-process .listitem .biaoqianhao .bqhlabel { font-size:12px; padding-top:2px; padding-right:2px; }
.main-process .nodata { height:380px; }


