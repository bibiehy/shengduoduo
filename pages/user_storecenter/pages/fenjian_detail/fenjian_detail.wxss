.detail-box { display:flex; flex-direction:column; width:100vw; height:100vh; overflow:hidden; }
.detail-box .mainbox { flex:1; width:calc(100% + 20px); padding:10px 30px 180px 10px; overflow-y:auto; }
.detail-box .mainbox .innerbox { min-height:100%; background-color:#fff; border-radius:8px; padding:10px 10px 50px; overflow:hidden; }

.rukukaweibox { display:flex; align-items:center; justify-content:space-between; width:100%; font-size:17px; border-bottom:solid 1px #f0f0f0; padding:14px 20px; }
.rukukaweibox .kwlabel { position:relative; color:rgba(0, 0, 0, 0.9); }
.rukukaweibox .kwlabel::before { position:absolute; left:-14px; top:-6px; font-size:17px; color:#d54941; content:"*"; font-family:SimSun,sans-serif; }
.rukukaweibox .kwtips { flex:1; display:flex; align-items:center; color:rgba(0, 0, 0, 0.45); padding-left:50px; }
.rukukaweibox .kwtips .kwvalue { flex:1; width:100px; text-align:right; white-space:nowrap; text-overflow:ellipsis; overflow:hidden; }

.tablebox { margin-top:2px; }
.tablebox .throw { display:flex; align-items:center; width:100%; height:42px; text-align:center; font-size:16px; background-color:#f3f3f3; border-radius:5px; }
.tablebox .tdrow { width:100%; border-bottom:solid 1px #f3f3f3; padding:6px 0; }
.tablebox .tdrow .rowinfo { display:flex; align-items:center; width:100%; text-align:center; font-size:14px; }
.tablebox .throw .cell_1, .tablebox .tdrow .rowinfo .cell_1 { width:90px; }
.tablebox .throw .cell_2, .tablebox .tdrow .rowinfo .cell_2 { width:70px; }
.tablebox .throw .cell_3, .tablebox .tdrow .rowinfo .cell_3 { width:112px; }
.tablebox .throw .cell_4, .tablebox .tdrow .rowinfo .cell_4 { flex:1; display:flex; align-items:center; justify-content:center; --td-checkbox-vertical-padding:0 !important; }
.tablebox .tdrow .rowinfo .t-checkbox__icon--left { margin:0 !important; }
.tablebox .tdrow .rowinfo .ebtn { font-size:15px; color:#ff3b30; padding:4px 12px; }
.tablebox .tdrow .rowinfo .ebtn.disabled { color:rgba(0, 0, 0, 0.26); }
.tablebox .tdrow .exception { display:inline-block; font-size:13px; background-color:#fdf7d7; color:#000; border-radius:2px; padding:0 5px; margin-left:18px; margin-top:6px; }

.beizhubox { font-size:13px; color:#ff8f1f; padding:5px 0 50px 20px; }
.beizhubox .desc { margin-bottom:2px; }


.fixed-bottom-btns { display:flex; align-items:center; justify-content:center; }
.fixed-bottom-btns .fixedbtn { width:120px; margin:0 20px; }









