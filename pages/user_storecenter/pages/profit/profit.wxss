.profit-search { display:flex; align-items:center; justify-content:space-between; background-color:#fff; box-shadow:0 5px 10px #e2e1e1; padding:8px 15px 5px; margin-top:-1px; }
.profit-search .filter { display:flex; align-items:center; justify-content:flex-end; --td-radio-font-size:15px; --td-radio-icon-size:22px; }
.profit-search .filter .t-radio { margin-right:5px; }
.profit-search .filter .t-radio__icon { margin-right:3px; }
.profit-search .filter .myDatepickerNoVerify { font-size:15px; }
.profit-search .filter .myRangepickerNoVerify { font-size:15px; }
.profit-search .filter .dropdown { display:flex; align-items:center; color:rgba(0, 0, 0, 0.7); font-size:15px; }
.profit-search .tongji { color:#ff3b30; font-size:15px; padding:5px 10px; }
.profit-search .tongji .countnum { margin:5px 0; }


.page-scroll { flex:1; padding:10px 10px 80px; overflow-y:auto; }
.page-scroll .listitem { position:relative; background-color:#fff; border-radius:8px; padding:12px 15px; margin-bottom:10px; }
.page-scroll .listitem .status { position:absolute; right:15px; top:15px; }
.page-scroll .listitem .mainbox { display:flex; }
.page-scroll .listitem .mainbox .imgbox { width:90px; height:90px; border-radius:8px; background-color:#f3f3f3; overflow:hidden; }
.page-scroll .listitem .mainbox .imgbox image { display:block; width:100%; height:100%; }
.page-scroll .listitem .mainbox .rightbox { flex:1; margin-left:12px; }
.page-scroll .listitem .mainbox .rightbox .psname { width:80%; font-size:16px; color:rgba(0, 0, 0, 0.85); white-space:nowrap; text-overflow:ellipsis; overflow:hidden; }
.page-scroll .listitem .mainbox .rightbox .pstime { font-size:12px; color:rgba(0, 0, 0, 0.45); margin-top:4px; }
.page-scroll .listitem .mainbox .rightbox .psinfo { font-size:14px; color:rgba(0, 0, 0, 0.55); margin-top:4px; }
.page-scroll .listitem .psbtns { display:flex; padding-top:8px; }
.page-scroll .listitem .psbtns .listag { display:flex; justify-content:center; min-width:70px !important; margin-right:12px; }
.page-scroll .nodata { height:500px; }


