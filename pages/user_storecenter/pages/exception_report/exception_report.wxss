.exception-report { display:flex; flex-direction:column; width:100vw; height:100vh; overflow:hidden; }
.exception-report .mainbox { flex:1; width:calc(100% + 20px); padding:10px 30px 180px 10px; overflow-y:auto; }
.exception-report .mainbox .innerbox { position:relative; min-height:100%; background-color:#fff; border-radius:8px; padding:45px 10px 50px; overflow:hidden; }
.exception-report .mainbox .wenxintips { position:absolute; left:2px; top:2px; width:calc(100% - 4px); font-size:15px; background-color:#fdf8de; text-align:center; font-weight:600; padding:12px 0; }
.exception-report .mainbox .reportbox { border:solid 1px #ededed; border-radius:4px; margin-top:10px; }
.exception-report .mainbox .reportbox .myFormViewbox { padding:0 10px; }
.exception-report .mainbox .reportbox .tname { display:flex; align-items:center; background-color:#f0f0f0; border-bottom:solid 1px #ededed; font-size:16px; padding:12px 15px; }
.exception-report .mainbox .reportbox .tname .remark { color:rgba(0, 0, 0, 0.45); font-size:14px; margin-left:8px; }
.exception-report .mainbox .reportbox .guigeitem { border:solid 1px #f0f0f0; box-shadow:inset 0 0 10px #f3f0f0; border-radius:4px; margin:7px 7px 0; }
.exception-report .mainbox .reportbox .addbtn { display:flex; align-items:center; justify-content:center; width:120px; color:#1677ff; font-size:18px; font-weight:600; padding:14px 0; margin:0 auto; }
.exception-report .mainbox .reportbox .addbtn .t-icon { font-size:22px; }













