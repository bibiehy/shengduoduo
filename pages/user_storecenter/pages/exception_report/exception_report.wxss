.exception-report { display:flex; flex-direction:column; width:100vw; height:100vh; overflow:hidden; }
.exception-report .mainbox { flex:1; width:calc(100% + 20px); padding:10px 30px 180px 10px; overflow-y:auto; }
.exception-report .mainbox .innerbox { min-height:100%; background-color:#fff; border-radius:8px; padding:10px 10px 50px; overflow:hidden; }
.exception-report .mainbox .reportbox { border:solid 1px #ededed; border-radius:4px; margin-top:20px; }
.exception-report .mainbox .reportbox .tname { background-color:#f0f0f0; border-bottom:solid 1px #ededed; font-size:16px; padding:5px 10px; }
.exception-report .mainbox .reportbox .guigeitem { border:solid 1px #f0f0f0; box-shadow:inset 0 0 10px #f3f0f0; border-radius:4px; padding:10px 0; margin:5px; }
.exception-report .mainbox .reportbox .addbtn { display:inline-flex; align-items:center; color:#1677ff; font-size:18px; font-weight:600; padding:20px 0; margin:0 auto; }
.exception-report .mainbox .reportbox .addbtn .t-icon { font-size:22px; }













