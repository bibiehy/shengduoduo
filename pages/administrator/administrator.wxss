.admin-wrapper { width:100%; height:100%; padding-bottom:150px; overflow-y:auto; }
.admin-wrapper .main-summary { display:flex; padding:20px 0; }
.admin-wrapper .main-summary .sumbox { flex:1; text-align:center; }
.admin-wrapper .main-summary .sumbox .sumname { color:rgba(255, 255, 255, 0.6); font-size:15px; margin-bottom:10px; }
.admin-wrapper .main-summary .sumbox .sumnumber { color:rgba(255, 255, 255, 0.9); font-size:24px; font-weight:600; }

.admin-wrapper .main-modules { display:flex; flex-wrap:wrap; background-color:#fff; border-radius:10px; padding:8px 8px 10px; margin:0 10px; }
.admin-wrapper .main-modules .moditem { width:25%; padding:12px; }
.admin-wrapper .main-modules .moditem .modimg { display:flex; align-items:center; justify-content:center; width:100%; background-color:#f0f0f0; border-radius:8px; padding:20px; overflow:hidden; }
.admin-wrapper .main-modules .moditem .modimg image { display:block; width:100%; }
.admin-wrapper .main-modules .moditem .modname { text-align:center; font-size:16px; color:rgba(0, 0, 0, 0.8); margin-top:5px; white-space:nowrap; text-overflow:ellipsis; overflow:hidden; }

.main-message { background-color:#fff; border-radius:10px; padding:0 20px 10px; margin:10px; }
.main-message .header { display:flex; align-items:center; justify-content:space-between; padding:15px 0; }
.main-message .header .msgtitle { font-size:17px; color:rgba(0, 0, 0, 0.9); font-weight:600; }
.main-message .header .msgright { display:flex; align-items:center; color:rgb(206, 205, 205); margin-right:-10px; }
.main-message .header .msgright .msgcount { min-width:24px; height:24px; text-align:center; line-height:24px; background-color:#ff3b30; border-radius:50%; color:#fff; font-size:12px; transform:scale(0.85); margin-right:-5px; }
.main-message .nodata { height:240px; }
.main-message .msgitem { position:relative; padding-bottom:15px; padding-left:25px; }
.main-message .msgitem .t-icon { position:absolute; left:0; top:13px; width:20px; }
.main-message .msgitem .msgtime { color:rgba(0, 0, 0, 0.45); font-size:13px; line-height:13px; }
.main-message .msgitem .msgdesc { color:rgba(0, 0, 0, 0.9); font-size:15px; }

.main-global { background-color:#fff; border-radius:10px; padding:15px 20px 10px; margin:10px; }
.main-global .gbtitle { font-size:17px; color:rgba(0, 0, 0, 0.9); font-weight:600; }
.main-global .gbcontent { display:flex; justify-content:space-between; padding:15px 0; }
.main-global .gbcontent .gbitem { position:relative; width:48%; height:200px; border-radius:10px; border:solid 1px #f0f0f0; overflow:hidden; }
.main-global .gbcontent .gbname { z-index:30; position:absolute; left:15px; top:10px; font-size:17px; color:rgba(0, 0, 0, 0.75); text-shadow:1px 1px #fff; font-weight:600; }
.main-global .gbcontent .gbitem image { z-index:20; position:absolute; left:0; bottom:0; width:100%; }





