.peisong-conditions { display:flex; align-items:center; background-color:#fff; box-shadow:0 5px 10px #e2e1e1; padding:14px 15px 8px; margin-top:-1px; }
.peisong-conditions .selectbox { display:flex; align-items:center; height:32px; background-color:#f3f3f3; border-radius:4px; padding:0 4px 0 10px; }
.peisong-conditions .selectbox .jihzxname { max-width:100px; font-size:16px; color:rgba(0, 0, 0, 0.65); white-space:nowrap; text-overflow:ellipsis; overflow:hidden; }
.peisong-conditions .datebox { display:flex; align-items:center; margin-left:10px; --td-radio-vertical-padding:0 !important; --td-radio-icon-size:20px !important; }
.peisong-conditions .datebox .showdate { display:flex; align-items:center; height:32px; background-color:#f3f3f3; border-radius:4px; padding:0 8px; }
.peisong-conditions .datebox .showdate .datevalue { font-size:14px; color:rgba(0, 0, 0, 0.65); margin-right:4px; }
.peisong-conditions .allbox { margin-left:10px; --td-radio-vertical-padding:0 !important; --td-radio-icon-size:20px !important; --td-radio-font-size:15px !important; --td-font-gray-1:rgba(0, 0, 0, 0.65) !important; }

.overview-header { display:flex; align-items:center; width:100%; height:42px; font-size:16px; background-color:#f3f3f3; border-radius:5px; }
.overview-body { display:flex; align-items:center; width:100%; height:42px; font-size:14px; border-bottom:solid 1px #f3f3f3; }
.overview-header .cell_1, .overview-body .viewitem .cell_1 { flex-shrink:0; flex:2; padding-left:20px; }
.overview-header .cell_2, .overview-body .viewitem .cell_2 { flex-shrink:0; flex:1; text-align:center; }
.overview-header .cell_3, .overview-body .viewitem .cell_3 { flex-shrink:0; flex:1; text-align:center; }



