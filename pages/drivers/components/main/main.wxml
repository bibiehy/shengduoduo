		<view class="quick-entry">
			<view class="entryitem">
				<view class="itemicon"><t-icon name="tree-round-dot" size="38px" bind:click="onIconTap" /></view>
				<view class="itemname">
					<view class="cn">创建任务</view>
					<view class="en">CREATE TASK</view>
				</view>
