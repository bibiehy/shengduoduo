.driversmain-wrapper { display:flex; flex-direction:column; width:100vw; height:100vh; overflow:hidden; }
.driversmain-wrapper .innerscroll { flex:1; width:calc(100% + 20px); height:100%; padding-bottom:150px; padding-right:20px; overflow-y:auto; }

.quick-entry { display:flex; justify-content:space-around; padding:40px 20px; }
.quick-entry .entryitem { display:flex; align-items:center; }
.quick-entry .entryitem .itemicon {  color:rgba(255, 255, 255, 0.75); margin-right:10px; text-shadow:1px 1px 2px rgba(0, 0, 0, 0.35); }
.quick-entry .entryitem .itemname { color:rgba(255, 255, 255, 0.85); }
.quick-entry .entryitem .itemname .cn { font-size:20px; text-shadow:1px 1px 2px rgba(0, 0, 0, 0.35); }
.quick-entry .entryitem .itemname .en { font-size:12px; padding-left:2px; text-shadow:1px 1px 2px rgba(0, 0, 0, 0.35); }

.task-fenjian-status { background-color:#fff; border-radius:8px; padding:12px; margin:10px; }
.task-fenjian-status .header { display:flex; align-items:center; justify-content:space-between; }
.task-fenjian-status .header .title { color:rgba(0, 0, 0, 0.75); font-size:17px; font-weight:600; padding-left:8px; }
.task-fenjian-status .header .selectbox { display:flex; align-items:center; max-width:220px; font-size:15px; color:rgba(0, 0, 0, 0.65); border:solid 1px #ebebeb; border-radius:4px; padding:4px 4px 4px 10px; }
.task-fenjian-status .header .selectbox .jihzxname { flex:1; white-space:nowrap; text-overflow:ellipsis; overflow:hidden; }
.task-fenjian-status .listitem { border:solid 1px #ebebeb; border-radius:8px; margin-top:10px; overflow:hidden; }
.task-fenjian-status .listitem .headbox { display:flex; align-items:center; justify-content:space-between; font-size:17px; color:rgba(0, 0, 0, 0.75); background-color:#f0f0f0; padding:5px 15px; }
.task-fenjian-status .listitem .headbox .status01 { color:#1677ff; font-size:14px; }
.task-fenjian-status .listitem .headbox .status02 { color:#2ba471; font-size:14px; }
.task-fenjian-status .listitem .bodybox { padding:5px 15px; }
.task-fenjian-status .listitem .bodybox .profile { font-size:15px; color:rgba(0, 0, 0, 0.55); margin:8px 0; }
.task-fenjian-status .listitem .bodybox .profile text { color:#ff3b30; }

.task-in-process { background-color:#fff; border-radius:8px; padding:15px 20px; margin:0 10px; }
.task-in-process .title { color:rgba(0, 0, 0, 0.75); font-size:17px; font-weight:600; }
.task-in-process .title .number { color:rgba(0, 0, 0, 0.45); font-size:15px; font-weight:400; padding-left:10px; }
.task-in-process .nodata { height:380px; }
.task-in-process .listbox { }



