.drivers-listbox { display:flex; flex-direction:column; height:100%; }

.driver-search { display:flex; align-items:center; background-color:#fff; box-shadow:0 5px 10px #e2e1e1; padding:8px 0 8px 12px; margin-top:-1px; }
.driver-search .selectbox { display:flex; align-items:center; height:34px; background-color:#f3f3f3; border-radius:6px; padding:0 5px 0 10px; margin-right:3px; }
.driver-search .selectbox .jihzxname { max-width:110px; font-size:16px; color:rgba(0, 0, 0, 0.65); white-space:nowrap; text-overflow:ellipsis; overflow:hidden; }
.driver-search .drsearch { display:flex; align-items:center; background-color:#fff; padding:0; --td-search-height:34px !important; --td-search-padding:0 10px 0 5px; --td-search-icon-font-size:18px; --td-search-font-size:16px; --td-search-text-color:rgba(0, 0, 0, 0.65); }
.driver-search .drline { width:1px; height:18px; background-color:#ccc; margin:0 5px 0 12px; }
.driver-search .draddbtn { display:flex; align-items:center; width:100px; font-size:18px; color:#1677ff; font-weight:600; line-height:20px; padding-left:10px; }

.page-scroll { flex:1; padding:10px 10px 120px; }
.page-scroll .listitem { position:relative; background-color:#fff; border-radius:8px; padding:12px 15px; margin-bottom:10px; }
.page-scroll .listitem .status { position:absolute; right:15px; top:15px; }
.page-scroll .listitem .mainbox { position:relative; display:flex; }
.page-scroll .listitem .mainbox .imgbox { position:relative; width:100px; height:100px; border-radius:8px; background-color:#f3f3f3; overflow:hidden; }
.page-scroll .listitem .mainbox .imgbox .avator { display:block; width:100%; height:100%; }
.page-scroll .listitem .mainbox .imgbox .distatus { position:absolute; left:-46px; bottom:-46px; display:flex; align-items:flex-start; justify-content:flex-end; width:80px; height:80px; transform:rotate(40deg); padding-right:20px; border-radius:50%; }
.page-scroll .listitem .mainbox .rightbox { flex:1; margin-left:12px; }
.page-scroll .listitem .mainbox .rightbox .psname { width:80%; font-size:17px; color:rgba(0, 0, 0, 0.9); font-weight:600; white-space:nowrap; text-overflow:ellipsis; overflow:hidden; }
.page-scroll .listitem .mainbox .rightbox .pstime { font-size:13px; color:rgba(0, 0, 0, 0.45); }
.page-scroll .listitem .mainbox .rightbox .psinfo { font-size:15px; color:rgba(0, 0, 0, 0.75); }
.page-scroll .listitem .psbtns { position:relative; display:flex; padding-top:8px; }
.page-scroll .listitem .psbtns .listag { display:flex; justify-content:center; min-width:70px !important; margin-right:16px; }
.page-scroll .listitem .psbtns .status { position:absolute; right:0; }
.page-scroll .nodata { height:500px; }