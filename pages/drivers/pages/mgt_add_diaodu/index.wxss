.diaodu-addbox { display:flex; flex-direction:column; width:100vw; height:100vh; overflow:hidden; }
.diaodu-addbox .mainbox { flex:1; width:calc(100% + 20px); padding:10px 30px 150px 10px; overflow-y:auto; }
.diaodu-addbox .mainbox .innerbox { min-height:100%; background-color:#fff; border-radius:8px; padding:10px 10px 50px; overflow:hidden; }
.diaodu-addbox .mainbox .innerbox .kabanbox { padding-top:5px; }
.diaodu-addbox .mainbox .innerbox .itemcont { position:relative; display:inline-block; width:calc(20% - 10px); height:34px; line-height:34px; color:#333; font-size:15px; background-color:#f5f5f5; border-radius:4px; text-align:center; box-sizing:border-box; margin-top:5px; margin-right:10px; }
.diaodu-addbox .mainbox .innerbox .itemcont .itemicon { display:none; position:absolute; right:0; bottom:0; width:19px; height:15px; background-size:19px 15px; background-image:url("data:image/png;base64,"); }
.diaodu-addbox .mainbox .innerbox .itemcont.active { color:#1677ff; background-color:#e7f1ff; }
.diaodu-addbox .mainbox .innerbox .itemcont.active .itemicon { display:block; }
.diaodu-addbox .mainbox .innerbox .itemcont.active.disabled { opacity:0.6; }