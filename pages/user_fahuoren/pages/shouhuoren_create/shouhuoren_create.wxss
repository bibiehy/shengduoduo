.shouhuoren-create-box { display:flex; flex-direction:column; width:100vw; height:100vh; overflow:hidden; }
.shouhuoren-create-box .mainbox { flex:1; width:calc(100% + 20px); padding:10px 30px 180px 10px; overflow-y:auto; }
.shouhuoren-create-box .mainbox .innerbox { min-height:100%; background-color:#fff; border-radius:8px; padding:10px 10px 0; overflow:hidden; }
