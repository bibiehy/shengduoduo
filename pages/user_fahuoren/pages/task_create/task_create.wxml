<view class="task-create-box">
    <navigation-bar title="创建发货任务" placement="left" showBack="{{true}}" background="#fff"></navigation-bar>
    <view class="mainbox">
        <view class="innerbox">
		    <form-input class="FORM_INPUT" label="任务名字" name="name" value="{{defaultValues['name']}}" placeholder="请输入任务名字" required="{{true}}" />
            <form-input class="FORM_INPUT" label="集货中心" name="center_id" value="{{defaultValues['center_name']}}" placeholder="请输入集货中心" disabled="{{true}}" required="{{true}}" />
			<form-datepicker class="FORM_DATEPICKER" label="预估送达集货中心的时间" name="estimate_time" value="{{defaultValues['estimate_time']}}" placeholder="请选择预估送达时间" mode="minute" required="{{true}}" />
			<form-select class="FORM_SELECT" bind:callback="onSelectShuohuoren" label="收货人" name="receive_user_id" value="{{defaultValues['receive_user_id']}}" options="{{shouhuorenList}}" placeholder="请选择收货人" required="{{true}}" />
			<block wx:if="{{shouhuorenItem}}">
				<form-input class="FORM_INPUT" label="收货人手机号码" name="receive_user_phone" value="{{defaultValues['receive_user_phone']}}" type="phone" placeholder="请输入收货人手机号码" required="{{true}}" disabled="{{true}}" />
				<form-radio class="FORM_RADIO" label="运费支付方" name="pay_type" value="{{defaultValues['pay_type'] || 1}}" options="{{paytypeOptions}}" required="{{true}}" />
				<form-select class="FORM_SELECT" label="设置提货点" name="pickup_id" value="{{defaultValues['pickup_id']}}" options="{{pointList}}" placeholder="请选择提货点" required="{{true}}" />
				<form-input class="FORM_INPUT" label="辅助标识" name="code" value="{{defaultValues['code']}}" placeholder="请输入辅助标识" required="{{true}}" disabled="{{true}}" regexp="^[a-zA-Z0-9_]+$" message="请输入字母、数字或带下划线等格式" />
				<form-select class="FORM_SELECT" label="规格类型" name="goods_type" value="{{defaultValues['goods_type']}}" options="{{goodsTypeList}}" placeholder="请选择规格类型" required="{{true}}" />
			</block>
			<view class="tablebox">
				<view class="throw">
					<view class="cell_1">规格</view>
					<view class="cell_2">基础运费/件</view>
					<view class="cell_3">件数</view>
				</view>
				<view class="tdrow">
					<view class="cell_1">1-10斤</view>
					<view class="cell_2">￥6.00</view>
					<view class="cell_3"><t-stepper min="{{0}}" max="{{10}}" defaultValue="{{1}}" theme="filled" /></view>
				</view>
				<view class="tdrow">
					<view class="cell_1">11-20斤</view>
					<view class="cell_2">￥6.00</view>
					<view class="cell_3"><t-stepper min="{{0}}" max="{{10}}" defaultValue="{{1}}" theme="filled" /></view>
				</view>
				<view class="tongji">
					共<view class="total">2</view>件，合计：<view class="fuhao">￥</view><view class="count">2,188.00</view>
				</view>
			</view>
			
        </view>
    </view>
    <fixed-bottom-button bind:callback="onSubmit" title="确认提交" />
</view>