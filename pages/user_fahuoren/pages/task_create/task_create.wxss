.task-create-box { display:flex; flex-direction:column; width:100vw; height:100vh; overflow:hidden; }
.task-create-box .mainbox { flex:1; width:calc(100% + 20px); padding:10px 30px 180px 10px; overflow-y:auto; }
.task-create-box .mainbox .innerbox { min-height:100%; background-color:#fff; border-radius:8px; padding:10px 10px 0; overflow:hidden; }

.tablebox { padding-bottom:50px; margin-top:2px; }
.tablebox .throw { display:flex; align-items:center; width:100%; height:42px; text-align:center; font-size:16px; background-color:#f3f3f3; border-radius:5px; }
.tablebox .tdrow { display:flex; align-items:center; width:100%; height:42px; text-align:center; font-size:14px; border-bottom:solid 1px #f3f3f3; }
.tablebox .throw .cell_1, .tablebox .tdrow .cell_1 { width:110px; }
.tablebox .throw .cell_2, .tablebox .tdrow .cell_2 { width:110px; }
.tablebox .throw .cell_3, .tablebox .tdrow .cell_3 { flex:1; display:flex; justify-content:center; }
.tablebox .tongji { display:flex; justify-content:flex-end; align-items:flex-end; font-size:14px; padding:10px; }
.tablebox .tongji .total { color:#ff3b30; padding:0 3px; }
.tablebox .tongji .fuhao { color:#ff3b30; }
.tablebox .tongji .count { color:#ff3b30; font-size:18px; margin-bottom:-1px; }

